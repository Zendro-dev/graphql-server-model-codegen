{
  "cwd": "./test/integration_test_env",
  "env": {
    "NODE_JQ_SKIP_INSTALL_BINARY": true
  },
  "docker": "../integration_test_misc/docker-compose-test.yml",
  "services": [
    {
      "name": "gql_science_db_graphql_server1",
      "template": "../../../graphql-server",
      "url": "http://localhost:3000/graphql",
      "source": true
    },
    {
      "name": "gql_science_db_graphql_server2",
      "template": "../../../graphql-server",
      "url": "http://localhost:3030/graphql",
      "source": true
    }
  ],
  "models": [
    {
      "codegen": "../..",
      "options": [ "--migrations" ],
      "path": "../integration_test_misc/integration_test_models_instance1",
      "targets": [ "gql_science_db_graphql_server1" ]
    },
    {
      "codegen": "../..",
      "options": [ "--migrations" ],
      "path": "../integration_test_misc/integration_test_models_instance2",
      "targets": [ "gql_science_db_graphql_server2" ]
    }
  ],
  "patches": [
    {
      "options": [ "-V", "never" ],
      "path": "../integration_test_misc/patches/model_aminoacidsequence.patch",
      "target": "gql_science_db_graphql_server1/models/generic/aminoacidsequence.js"
    },
    {
      "options": [ "-V", "never" ],
      "path": "../integration_test_misc/patches/individual_validate.patch",
      "target": "gql_science_db_graphql_server1/validations/individual.js"
    },
    {
      "options": [ "-V", "never" ],
      "path": "../integration_test_misc/patches/accession_validate_instance1.patch",
      "target": "gql_science_db_graphql_server1/validations/accession.js"
    },
    {
      "options": [ "-V", "never" ],
      "path": "../integration_test_misc/patches/cat_readAllCursor.patch",
      "target": "gql_science_db_graphql_server1/models/sql/cat.js"
    }
  ],
  "tests": [
    {
      "name": "integration",
      "runner": "mocha",
      "target": "../mocha_integration.test.js"
    },
    {
      "name": "cassandra-integration",
      "runner": "mocha",
      "target": "../mocha_integration_cassandra.test.js"
    },
    {
      "name": "unit",
      "runner": "mocha",
      "target": "../mocha_unit.test.js"
    }
  ]
}
