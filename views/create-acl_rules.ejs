<% let modelsAndAdapters = models.concat(adapters) -%>
module.exports = {
  aclRules: [
    // model and adapter permissions
    {
      roles: 'editor',
      allows: [{
        resources: [
        <%for( let i=0; i<modelsAndAdapters.length; i++ ){-%>
          '<%- modelsAndAdapters[i] _%>',
        <%}-%>
        ],
        permissions: ['create', 'update', 'delete', 'search']
      }]
    },

    {
      roles: 'reader',
      allows: [{
        resources: [
        <%for( let i=0; i<modelsAndAdapters.length; i++ ){-%>
          '<%- modelsAndAdapters[i] _%>',
        <%}-%>
        ],
        permissions: ['read']
      }]
    },
  ]
}